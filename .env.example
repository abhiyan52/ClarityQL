# Copy to .env and fill with real values. Do not commit .env.

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@127.0.0.1:5432/clarityql
DATABASE_URL_SYNC=postgresql+psycopg://postgres:postgres@127.0.0.1:5432/clarityql

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours

# LLM Configuration (Gemini is default)
LLM_PROVIDER=gemini
LLM_MODEL=gemini-3-flash-preview
LLM_TEMPERATURE=0.0

# Provider API Keys (only one needed based on LLM_PROVIDER)
GOOGLE_API_KEY=           # For Gemini (default)
OPENAI_API_KEY=           # For OpenAI
ANTHROPIC_API_KEY=        # For Anthropic

# Celery (Async Task Processing)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=db+postgresql+psycopg://postgres:postgres@127.0.0.1:5432/clarityql

# Embedding Configuration
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct  # Sentence Transformer model
EMBEDDING_DIMENSION=1024  # Dimension for multilingual-e5-large-instruct
EMBEDDING_NORMALIZE=true  # Normalize embeddings
